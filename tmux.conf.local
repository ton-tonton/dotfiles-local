# remap prefix to Control + a
set -g prefix C-a
unbind C-b
bind C-a send-prefix

# mouse mode
set -g mouse on

# status bar
battery="#{battery_status_fg} #{battery_icon} #{battery_percentage}"
date="#[fg=#93A1A1]%a %d %h %H:%M"
is_keys_off="#[fg=red]#([ $(tmux show-option -qv key-table) = 'off' ] && echo 'OFF')#[default]"

set -g status-interval 5
set -g status-left '#[fg=cyan]#S '
set -g status-right "#{prefix_highlight} $is_keys_off $date $battery "

# force a reload of the config file
unbind r
bind r source-file ~/.tmux.conf \; display-message "Config reloaded..."

# quick pane cycling
unbind ^A
bind ^A select-pane -t :.+

# Turn off prefix
bind -T root F12  \
  set prefix None \;\
  set key-table off \;\
  if -F '#{pane_in_mode}' 'send-keys -X cancel' \;\
  refresh-client -S \;\

# Turn on prefix
bind -T off F12 \
  set -u prefix \;\
  set -u key-table \;\
  refresh-client -S

# Load remote config for remote session
if-shell 'test -n "$SSH_CLIENT"' \
   'source-file ~/.tmux.conf.remote'

# tmux-colors-solarized config
set -g @colors-solarized 'dark'

# tmux-battery config
set -g @batt_charged_icon "ğŸŒˆ"
set -g @batt_charging_icon "ğŸ”¥"
set -g @batt_attached_icon "ğŸŒˆ"
set -g @batt_full_charge_icon "ğŸŒˆ"
set -g @batt_high_charge_icon "ğŸ˜"
set -g @batt_medium_charge_icon "ğŸ˜¨"
set -g @batt_low_charge_icon "ğŸ˜±"

# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
set -g @plugin 'nhdaly/tmux-better-mouse-mode'
set -g @plugin 'seebi/tmux-colors-solarized'
set -g @plugin 'tmux-plugins/tmux-battery'
# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
